@model RentNGoApp.DataModels.Car

@{
    ViewData["Title"] = "Post an Announcement";
}

<div class="center-div">
    <h1 class="text-primary">Post an Announcement!</h1>
    <form method="post">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group row my-2">
                    <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="name" type="text" id="name" name="name" class="form-control" placeholder="Name">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label asp-for="brand" class="col-sm-2 col-form-label">Brand</label>
                    <div class="col-sm-10">
                        <select name="brand" asp-for="brand" asp-items="Html.GetEnumSelectList<RentNGoApp.DataModels.Brand>()" class="form-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label asp-for="color" class="col-sm-2 col-form-label">Color</label>
                    <div class="col-sm-10">
                        <select asp-for="color" name="color" asp-items="Html.GetEnumSelectList<RentNGoApp.DataModels.Color>()" class="form-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label asp-for="price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="price" type="number" id="price" name="price" class="form-control" placeholder="Price">
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label asp-for="images" class="col-sm-2 col-form-label">Images</label>
                    <div class="col-sm-10">
                        <input asp-for="images" class="form-control" type="file" id="imgs" name="imgs" multiple>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group row my-2">
                    <div class="col-sm-12">
                        <textarea type="text" asp-for="description" id="description" name="description" class="form-control" placeholder="Description" rows="9"  ></textarea>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Submit</button>
    </form>
</div>
