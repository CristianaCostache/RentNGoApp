<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - RentNGoApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/RentNGoApp.styles.css" asp-append-version="true" />
</head>
<body>
	<header class="sticky-top">
		<nav class="navbar navbar-expand-sm bg-light navbar-light justify-content-center d-flex justify-content-around">
			<a class="navbar-brand" asp-controller="Car" asp-action="Feed">
				<img src="~/img/img.png" alt="logo" class="logo">
				Rent n Go
			</a>
			<div>
				<ul class="navbar-nav">
					<li>
						<a class="dropdown-item" asp-controller="Car" asp-action="Post">Post an announcement</a>
					</li>
				</ul>
			</div>
			<div>
				<ul class="navbar-nav">
					<li>
						<a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>
			@RenderBody()

	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
