@{
	ViewData["Title"] = "Register";
}

<div class="center-div">
    <h1 class="text-primary">Sign up!</h1>
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">First name</label>
            <div class="col-sm-10">
                <input type="text" id="fname" name="fname" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last name</label>
            <div class="col-sm-10">
                <input type="text" id="lname" name="lname" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" id="email" name="email" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" id="pw" name="pw" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Confirm password</label>
            <div class="col-sm-10">
                <input type="password" id="cpw" name="cpw" class="form-control">
            </div>
        </div>

        <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Submit</button>
    </form>

    <br>
    <p class="text-primary ">Already have an account? 
        <a asp-controller="User" asp-action="Login">Log in</a>!
    </p>

</div>

